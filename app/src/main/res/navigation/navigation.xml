<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/navigation"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.mossco.za.mvvm.view.ListFragment"
        android:label="ListFragment" >
        <action
            android:id="@+id/action_listFragment_to_detailedFragment"
            app:destination="@id/detailedFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailedFragment"
        android:name="com.mossco.za.mvvm.view.DetailedFragment"
        android:label="DetailedFragment" >
        <action
            android:id="@+id/action_detailedFragment_to_listFragment2"
            app:destination="@id/listFragment" />
    </fragment>
</navigation>